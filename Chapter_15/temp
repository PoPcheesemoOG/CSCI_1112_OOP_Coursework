package practice;

import javafx.animation.Animation;
import javafx.application.Application;
import javafx.stage.Stage;
import javafx.animation.KeyFrame;
import javafx.animation.Timeline;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.scene.Scene;
import javafx.scene.layout.StackPane;
import javafx.scene.paint.Color;
import javafx.scene.text.Text;
import javafx.util.Duration;
import javafx.scene.shape.Rectangle;
import javafx.scene.shape.Polygon;

public class AnimationDemo extends Application {
	@Override
	public void start (Stage primaryStage) {
		StackPane pane = new StackPane();
		Text txt = new Text(20, 50, "PERKELE");
		txt.setFill(Color.DARKMAGENTA);
		//pane.getChildren().add(txt);

		Polygon pentg = new Polygon(5);
		pentg.getPoints().addAll(new Double[] {
				40.0, 10.0,
				70.0, 40.0,
				60.0, 70.0,
				20.0, 70.0,
				10.0, 40.0
		});
		
		Polygon pentg2 = new Polygon(5);
		pentg2.getPoints().addAll(new Double[] {
				40.0, -10.0,
				70.0, -40.0,
				60.0, -70.0,
				20.0, -70.0,
				10.0, -40.0
		});
		pentg2.setFill(null);
		
		Rectangle rect = new Rectangle(25, 60);
		rect.setFill(Color.RED);

		pane.getChildren().addAll(pentg, pentg2);
		
		EventHandler<ActionEvent> eventHandler = e -> {
			if (txt.getText().length() != 0) {
				txt.setText("");
			}
			else {
				txt.setText("SAATANA");
			}
		};

		Timeline bingo = new Timeline(
				new KeyFrame(Duration.millis(500), eventHandler));
		bingo.setCycleCount(Timeline.INDEFINITE);
		bingo.play();

		txt.setOnMouseClicked(e -> {
			if (bingo.getStatus() == Animation.Status.PAUSED) {
				bingo.play();
			}
			else {
				bingo.pause();
			}
		});

		Scene scene = new Scene(pane, 250, 250);
		primaryStage.setTitle("BINGOBANGOBONGO");
		primaryStage.setScene(scene);
		primaryStage.show();

	}
	public static void main(String[] args) {
		launch(args);
	}

}
